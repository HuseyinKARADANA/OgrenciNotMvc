@using OgrenciNotMvc.Models.EntityFramework;
@model List<TBLOGRENCILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Öğreciler</h2>

<table class="table table-bordered">
    <tr>
        <th>Öğrenci Id</th>
        <th>Adı</th>
        <th>Soyadı</th>
        <th>Cinsiyet</th>
        <th>Kulüp</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach (var ogrenci in Model)
        {
            <tr>
                <td>@ogrenci.OGRENCIID</td>
                <td>@ogrenci.OGRAD</td>
                <td>@ogrenci.OGRSOYAD</td>
                <td>@ogrenci.OGRCINSIYET</td>
                <td>@ogrenci.OGRKULUP</td>
                <td><a href="/Ogrenci/Sil/@ogrenci.OGRENCIID" class="btn btn-danger">Sil</a>
                    <a href="/Ogrenci/Guncelle/@ogrenci.OGRENCIID" class="btn btn-info">Güncelle</a>
                </td>
                
            </tr>
        }
    </tbody>
</table>
<a href="/Ogrenci/YeniOgrenci" class="btn btn-primary">Yeni Öğrenci Kaydı</a>
