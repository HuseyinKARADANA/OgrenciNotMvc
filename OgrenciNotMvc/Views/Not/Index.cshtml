@using OgrenciNotMvc.Models.EntityFramework;
@model  List<TBLNOTLAR>  
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Notlar</h2>
<table class="table table-bordered">
    <tr>
        <th>Not Id</th>
        <th>Ders Id</th>
        <th>Öğrenci Id</th>
        <th>Sınav 1</th>
        <th>Sınav 2</th>
        <th>Sınav 3</th>
        <th>Proje</th>
        <th>Ortalama</th>
        <th>Durum</th>
        <th>İşlemler</th>

    </tr>
    <tbody>
        @foreach (var not in Model)
        {
            <tr>
                <td>@not.NOTID</td>
                <td>@not.TBLDERSLER.DERSAD</td>
                <td>@not.TBLOGRENCILER.OGRAD @not.TBLOGRENCILER.OGRSOYAD</td>
                <td>@not.SINAV1</td>
                <td>@not.SINAV2</td>
                <td>@not.SINAV3</td>
                <td>@not.PROJE</td>
                <td>@not.ORTALAMA</td>
                <td>@not.DURUM</td>
                <td><a href="/Not/NotGetir/@not.NOTID" class="btn btn-info">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Not/YeniSinav" class="btn btn-primary">Yeni Sınav Girişi</a>