@using OgrenciNotMvc.Models.EntityFramework;
@model List<TBLKULUPLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kulüpler</h2>

<table class="table table-bordered">
    <tr>
        <th>Kulüp Id</th>
        <th>Kulüp Adı</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach(var kulup in Model)
            {
            <tr>
                <td>@kulup.KULUPID</td>
                <td>@kulup.KULUPAD</td>
                <td><a href="/Kulupler/Sil/@kulup.KULUPID" class="btn btn-danger">Sil</a>
                <a href="/Kulupler/KulupGetir/@kulup.KULUPID" class="btn btn-info">Güncelle</a></td>
               
                
            </tr>
            }
    </tbody>
</table>
<a href="/Kulupler/YeniKulup" class="btn btn-primary">Yeni Kulüp Kaydı</a>