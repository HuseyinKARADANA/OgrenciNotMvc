@using OgrenciNotMvc.Models.EntityFramework;
@model List<TBLDERSLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Dersler</h1>
<table class="table table-bordered">
    <tr>
        <th>Ders Id</th>
        <th>Ders Adı</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach(var ders in Model)
            {
                <tr>
                    <td>@ders.DERSID</td>
                    <td>@ders.DERSAD</td>
                    <td><a href="/Default/Sil/@ders.DERSID" class="btn btn-danger">Sil</a>
                        <a href="/Default/DersGetir/@ders.DERSID"  class="btn btn-info">Güncelle</a>
                    </td>

                </tr>
            }
    </tbody>
</table>
<a href="/Default/YeniDers" class="btn btn-primary">Yeni Ders Kaydı</a>

